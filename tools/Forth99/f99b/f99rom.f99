0 <EXPORT

: regs-init

    (UP0) (>CONTEXT) [ CTX_UP field, ]
    
    (rp0) rp0 !     
    (sp0) sp0 !
    (pad0) (pad) !  
    (#-pad0) (#pad) !
    (slit-pad0) (spad) !

    sp0 @ sp!
    
    r>      \ remember return
    RP0 @ (>CONTEXT) [ CTX_RP field, ]
    >r
;


:   quit
    10 base !
    
    begin
        key? if key emit 
        else ints-check
        then
    again
;

:   abort

    regs-init   ints-init   kbd-init
    
    ."  aborted" cr
    
    quit
;


\ -------------------------------


:   cycle
    \ hex $1F2E3D4C. d.d 10 demit decimal
    \ 256 0 do i .d 10 demit loop
    begin
        42 demit
        256 0 do
            key? if key else i then
            v-clear
            ints-check
            \ 0 0 do loop
        loop
    again
;


:   bootup

    DP0 @ dp !
    10 base !
    
    regs-init

    ints-init
    
    kbd-init
    
    video-init
 
    decimal 
 
    0 blk !
 
    empty-buffers
       
    cycle
;

