
DEFER	THROW	( k*x n -- k*x | i*x n )
DEFER	CATCH	( i*x xt -- j*x 0 | i*x n )

[IFUNDEF] ABORT

: ABORT
\ EXCEPTION EXT
\ 
\ Extend the semantics of 6.1.0670 ABORT to be:
\ 
\         ( i*x -- ) ( R: j*x -- )
\ 
\ Perform the function of -1 THROW .
 
	err-abort throw
;

[THEN]

\ Extension

: ?throw ( t|f code -- )
    swap 0<> swap  AND  throw
;


