\ Parse name, which must not be empty
| : parse-name ( c"..."  -- caddr len )

    parse-word
    ?dup 0= if
        err-empty-name throw
    then
;

: interpret
    begin
        \ ?stack        \ checked automatically
        parse-word
        dup
    while
        interpreter
    repeat
    2drop
;

: EVALUATE  ( i*x c-addr u -- j*x )
