
| Code rom-EMIT ( ch -- )
	rTOS		TERM^	,XOP  	#t.tty ,
	
	rTOS				,SWPB
	rTOS		@>		,MOVB	'DBG ,
	POP
end-code

' rom-EMIT 	TO EMIT

| Code rom-KEY? ( --  f )
	PUSH
	rTOS		TERM^	,XOP  	#t.key? ,
end-code
' rom-KEY? 	TO KEY?

| Code xop-key ( --  k | 0 )
	PUSH
	rTOS		TERM^	,XOP  	#t.rdkey ,
end-code

| : rom-KEY ( --  k )
	begin
		ints-check
		xop-key ?dup
	until
;
' rom-KEY 		TO KEY

